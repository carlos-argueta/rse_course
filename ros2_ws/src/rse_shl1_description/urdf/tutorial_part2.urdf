<?xml version="1.0"?>
<robot name="shl-1" xmlns:xacro="http://wiki.ros.org/xacro">

  <material name="black"><color rgba="0 0 0 1" /></material>
  <material name="light_black"><color rgba="0.1 0.1 0.1 1" /></material>

  <link name="base_link">
    <visual>
      <geometry><box size="0.54 0.338 0.202"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/><material name="black"/>
    </visual>
    <collision>
      <geometry><box size="0.54 0.338 0.202"/></geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
  </link>

  <link name="base_footprint"></link>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.3315" rpy="0 0 0"/>
  </joint>
  
  <link name="armario">
    <visual><geometry><box size="0.715 0.49 0.655"/></geometry><material name="black"/></visual>
    <collision><geometry><box size="0.715 0.49 0.655"/></geometry></collision>
  </link>
  <joint name="armario_link_joint" type="fixed">
    <parent link="base_link"/>
    <child link="armario"/>
    <origin rpy="0 0 0" xyz="0.002 0 0.5025 "/>
  </joint>

  <link name="base_battery">
    <visual>
      <geometry><mesh filename="package://rse_shl1_description/meshes/bases/trapezoid_battery.stl"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><mesh filename="package://rse_shl1_description/meshes/bases/trapezoid_battery.stl"/></geometry>
    </collision>
  </link>

  <joint name="base_battery_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_battery"/>
    <origin xyz="-0.003 0 -0.15"/>
  </joint>

  <link name="fl_horizontal_arm">
    <visual>
      <origin xyz="0 0.05 0"/>
      <geometry><box size="0.04 0.1 0.04"/></geometry>
      <material name="light_black"/>
    </visual>
  </link>

  <joint name="fl_horizontal_arm_joint" type="fixed">
    <parent link="base_link"/>
    <child link="fl_horizontal_arm"/>
    <origin xyz="0.27 0.169 0.0" rpy="0 0 0"/>
  </joint>

  <link name="fl_vertical_upright">
    <visual>
      <origin xyz="0 0 -0.125"/>
      <geometry><box size="0.04 0.04 0.25"/></geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="fl_steer_joint" type="revolute">
    <parent link="fl_horizontal_arm"/>
    <child  link="fl_vertical_upright"/>
    <origin xyz="0 0.1 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.785398" upper="0.785398" effort="20" velocity="6.28"/>
  </joint>

  <link name="fl_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="-1.57079632679 0 0"/>
      <geometry><cylinder radius="0.0825" length="0.07"/></geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="fl_drive_joint" type="continuous">
    <parent link="fl_vertical_upright"/>
    <child  link="fl_wheel"/>
    <origin xyz="0 0.0575 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
</robot>